@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cooking Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layout/admin.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="sidebar-logo">
            <h2>Cooking Admin</h2>
            </div>
            <ul class="sidebar-menu">
            <li class="@(ViewData["ActiveMenu"]?.ToString() == "Dashboard" ? "active" : "")">
            <a asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
            </li>
            <li class="@(ViewData["ActiveMenu"]?.ToString() == "IngredientList" ? "active" : "")">
            <a asp-controller="Admin" asp-action="IngredientList">Nguyên liệu</a>
            </li>
            <li class="@(ViewData["ActiveMenu"]?.ToString() == "RecipeList" ? "active" : "")">
            <a asp-controller="Admin" asp-action="RecipeList">Công thức</a>
            </li>
            <li class="@(ViewData["ActiveMenu"]?.ToString() == "ReviewList" ? "active" : "")">
            <a asp-controller="Admin" asp-action="ReviewList">Đánh giá</a>
            </li>
            <li class="@(ViewData["ActiveMenu"]?.ToString() == "UserList" ? "active" : "")">
            <a asp-controller="Admin" asp-action="UserList">Người dùng</a>
            </li>
            </ul>
        </aside>

        <!-- Main content -->
        <main class="admin-main">
            <header class="admin-header">
            <h2>@ViewData["Title"]</h2>
            <div class="admin-user-dropdown dropdown">
            <button class="btn btn-link dropdown-toggle" type="button" id="adminDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user"></i> Admin
                </button>
                    <div class="dropdown-menu" aria-labelledby="adminDropdown">
                        <a class="dropdown-item" href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
                    </div>
                </div>
            </header>

            <section class="admin-content">
                @RenderBody()
            </section>

            <footer class="admin-footer">
                <p>&copy; @DateTime.Now.Year - Cooking Notebook Admin</p>
            </footer>
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>