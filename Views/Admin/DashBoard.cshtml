@{
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Dashboard";
    ViewData["ActiveMenu"] = "Dashboard";
}

<div class="dashboard">
    <h2>Dashboard Quản trị</h2>

    <!-- Các thẻ thống kê -->
    <div class="stats-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-top: 20px;">
        <div class="stat-card" style="background: #1B263B; padding: 20px; border-radius: 8px; border: 1px solid #3A475C; text-align: center;">
            <i class="fas fa-utensils" style="font-size: 2em; color: #68C69F; margin-bottom: 10px;"></i>
            <h3 style="color: #E0E1DD; margin: 0;">Công thức</h3>
            <p style="color: #A9A9A9; font-size: 1.5em; margin: 5px 0 0;">@Model.RecipeCount</p>
        </div>
        <div class="stat-card" style="background: #1B263B; padding: 20px; border-radius: 8px; border: 1px solid #3A475C; text-align: center;">
            <i class="fas fa-carrot" style="font-size: 2em; color: #68C69F; margin-bottom: 10px;"></i>
            <h3 style="color: #E0E1DD; margin: 0;">Nguyên liệu</h3>
            <p style="color: #A9A9A9; font-size: 1.5em; margin: 5px 0 0;">@Model.IngredientCount</p>
        </div>
        <div class="stat-card" style="background: #1B263B; padding: 20px; border-radius: 8px; border: 1px solid #3A475C; text-align: center;">
            <i class="fas fa-users" style="font-size: 2em; color: #68C69F; margin-bottom: 10px;"></i>
            <h3 style="color: #E0E1DD; margin: 0;">Người dùng</h3>
            <p style="color: #A9A9A9; font-size: 1.5em; margin: 5px 0 0;">@Model.UserCount</p>
        </div>
        <div class="stat-card" style="background: #1B263B; padding: 20px; border-radius: 8px; border: 1px solid #3A475C; text-align: center;">
            <i class="fas fa-star" style="font-size: 2em; color: #68C69F; margin-bottom: 10px;"></i>
            <h3 style="color: #E0E1DD; margin: 0;">Đánh giá</h3>
            <p style="color: #A9A9A9; font-size: 1.5em; margin: 5px 0 0;">@Model.ReviewCount</p>
        </div>
    </div>

    <p style="color: #A9A9A9; margin-top: 30px;">Chào mừng đến trang quản trị Cooking Notebook!</p>
</div>
