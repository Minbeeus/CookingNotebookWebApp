@model CookingNotebookWebApp.Models.User

@{
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh sửa người dùng";
    ViewData["ActiveMenu"] = "UserList";
}

<link rel="stylesheet" href="~/css/Admin/edituser.css" />

<div class="edit-user">
    <h2 class="page-title">✏️ Chỉnh sửa người dùng</h2>
    <p class="page-subtitle">Cập nhật thông tin người dùng</p>

    <form asp-action="EditUser" method="post" class="edit-form">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="PasswordHash" />
        <input type="hidden" asp-for="CreatedAt" />

        <div class="form-group">
            <label asp-for="FullName">Họ tên:</label>
            <input asp-for="FullName" class="form-control" required />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Role">Vai trò:</label>
            <select asp-for="Role" class="form-control">
                <option value="User">User</option>
                <option value="Admin">Admin</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Status">Trạng thái:</label>
            <select asp-for="Status" class="form-control">
                <option value="true">Hoạt động</option>
                <option value="false">Khóa</option>
            </select>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-save">Lưu thay đổi</button>
            <a href="@Url.Action("UserList", "Admin")" class="btn btn-cancel">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
