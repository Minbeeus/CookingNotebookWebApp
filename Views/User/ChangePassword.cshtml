@model CookingNotebookWebApp.Models.ViewModels.ChangePasswordViewModel

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Đổi mật khẩu";
}

@section Styles {
    <link rel="stylesheet" href="~/css/User/change_password.css" />
}

<div class="change-password-page">
    <div class="change-password-card">
        <h2>🔐 Đổi mật khẩu</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form asp-action="ChangePassword" method="post" class="password-form">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Mật khẩu hiện tại</label>
                <input asp-for="CurrentPassword" type="password" class="form-control" required />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Mật khẩu mới</label>
                <input asp-for="NewPassword" type="password" class="form-control"
                       required pattern="^(?=.*[A-Z])(?=.*[a-z])(?=.*\d).{6,}$"
                       title="Mật khẩu phải có ít nhất 6 ký tự, bao gồm chữ hoa, chữ thường và số." />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Xác nhận mật khẩu mới</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-orange">💾 Lưu thay đổi</button>
                <a href="/User/Profile" class="btn btn-outline-orange">↩ Trở lại</a>
            </div>
        </form>
    </div>
</div>