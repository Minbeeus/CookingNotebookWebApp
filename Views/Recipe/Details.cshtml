@model CookingNotebookWebApp.Models.Recipe

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Title;
}

@section Styles {
    <link rel="stylesheet" href="~/css/Recipe/details.css" />
}

<div class="recipe-details">
    <!-- Header with image and info -->
    <div class="recipe-header">
        <div class="recipe-image">
            <img src="@Model.ImageUrl" alt="@Model.Title" />
        </div>
        <div class="recipe-info">
            <div class="recipe-meta">
                <div class="meta-item">
                    <i class="fas fa-clock"></i>
                    <span>@Model.PrepTime phút chuẩn bị</span>
                </div>
                <div class="meta-item">
                    <i class="fas fa-fire"></i>
                    <span>@Model.CookTime phút nấu</span>
                </div>
                <div class="meta-item">
                    <i class="fas fa-users"></i>
                    <span>@Model.Servings người ăn</span>
                </div>
                <div class="meta-item">
                    <i class="fas fa-star"></i>
                    <span>@Model.AverageRating.ToString("0.0") ⭐ (@Model.Reviews?.Count ?? 0 đánh giá)</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Recipe title -->
    <h1 class="recipe-title">@Model.Title</h1>

    <!-- Description -->
    <div class="recipe-description">
        <p>@Model.Description</p>
    </div>

    <!-- Steps carousel -->
    <div class="recipe-steps">
        <h2>Các bước thực hiện</h2>
        <div class="steps-carousel">
            <button class="carousel-btn prev-btn" id="prevStep">
                <i class="fas fa-chevron-left"></i>
            </button>

            <div class="steps-content" id="stepsContent">
                @if (Model.Steps != null && Model.Steps.Any())
                {
                    foreach (var step in Model.Steps.OrderBy(s => s.StepNumber))
                    {
                        <div class="step-item" data-step="@step.StepNumber">
                        <div class="step-image">
                        @if (!string.IsNullOrEmpty(step.ImageUrl))
                            {
                                <img src="@step.ImageUrl" alt="Bước @step.StepNumber" />
                        }
                        else
                            {
                                    <img src="@Model.ImageUrl" alt="Bước @step.StepNumber" />
                                }
                            </div>
                            <div class="step-content">
                                <div class="step-number">Bước @step.StepNumber</div>
                                <div class="step-description">@step.Description</div>
                                @if (step.TimerInMinutes.HasValue && step.TimerInMinutes > 0)
                                {
                                    <div class="step-timer">⏱️ @step.TimerInMinutes phút</div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>

            <button class="carousel-btn next-btn" id="nextStep">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>

        <div class="steps-indicators" id="stepsIndicators">
            @if (Model.Steps != null && Model.Steps.Any())
            {
                var stepCount = Model.Steps.Count();
                for (int i = 1; i <= stepCount; i++)
                {
                    <span class="indicator @(i == 1 ? "active" : "")" data-step="@i"></span>
                }
            }
        </div>
    </div>

    <!-- Notes -->
    @if (!string.IsNullOrEmpty(Model.Note))
    {
        <div class="recipe-notes">
            <h2>Lưu ý</h2>
            <p>@Model.Note</p>
        </div>
    }

    <!-- Action buttons -->
    <div class="action-buttons">
        @if (User.Identity.IsAuthenticated)
        {
            <button class="action-btn favorite-btn @(Model.IsFavorited ? "favorited" : "")" id="favoriteBtn" data-recipe-id="@Model.RecipeId">
                <i class="fas fa-heart"></i>
            </button>
        }

        <button class="action-btn review-btn" id="reviewBtn" data-recipe-id="@Model.RecipeId">
            <i class="fas fa-comments"></i>
        </button>

        @if (User.Identity.IsAuthenticated)
        {
            <button class="action-btn rate-btn @(Model.UserRating > 0 ? "rated" : "")" id="rateBtn" data-recipe-id="@Model.RecipeId">
                <i class="fas fa-star"></i>
            </button>
        }
    </div>

    <!-- Hidden data for JavaScript -->
    @if (User.Identity.IsAuthenticated)
    {
        <script>
            window.userRating = @Model.UserRating;
            window.userComment = '@(Model.UserComment?.Replace("'", "\\'")?.Replace("\n", "\\n")?.Replace("\r", "") ?? "")';
        </script>
    }
</div>

<!-- Reviews Modal -->
<div class="modal" id="reviewsModal">
    <div class="modal-content">
        <span class="close-modal" id="closeReviewsModal">&times;</span>
        <h2>Đánh giá & Bình luận</h2>

        <div class="reviews-list" id="reviewsList">
            <!-- Reviews will be loaded here -->
        </div>

        <div class="pagination-controls" id="paginationControls">
            <button class="pagination-btn" id="prevPage" disabled>
                <i class="fas fa-chevron-left"></i> Trước
            </button>
            <span id="pageInfo">Trang 1</span>
            <button class="pagination-btn" id="nextPage" disabled>
                Sau <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
</div>

<!-- Rate Modal -->
@if (User.Identity.IsAuthenticated)
{
    <div class="modal" id="rateModal">
        <div class="modal-content">
            <span class="close-modal" id="closeRateModal">&times;</span>
            <h2>Đánh giá công thức</h2>

            <form id="rateForm">
                <div class="rating-stars">
                    <span class="star" data-rating="1">★</span>
                    <span class="star" data-rating="2">★</span>
                    <span class="star" data-rating="3">★</span>
                    <span class="star" data-rating="4">★</span>
                    <span class="star" data-rating="5">★</span>
                </div>

                <textarea id="reviewComment" placeholder="Viết bình luận của bạn..." rows="4"></textarea>

                <div class="modal-actions">
                <button type="button" class="cancel-btn" id="cancelRate">Hủy</button>
                <button type="submit" class="submit-btn" id="submitRateBtn">Gửi đánh giá</button>
                    <button type="button" class="delete-btn" id="deleteRateBtn" style="display: none;">Xóa đánh giá</button>
        </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/Recipe/details.js"></script>
}
