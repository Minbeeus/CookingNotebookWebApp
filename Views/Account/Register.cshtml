@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Đăng ký - Cooking Notebook";
}

<link rel="stylesheet" href="~/css/Account/register.css" />

<div class="register-container">
    <div class="register-card">
        <div class="register-header">
            <h1>🍳 Cooking Notebook</h1>
            <p>Tạo tài khoản để bắt đầu hành trình nấu ăn của bạn!</p>
        </div>

        <form id="registerForm" method="post" asp-action="Register" asp-controller="Account">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="FullName">Họ và tên</label>
                <input type="text" id="FullName" name="FullName" required placeholder="Nhập họ và tên của bạn" />
                <small class="error-message" id="nameError"></small>
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" id="Email" name="Email" required placeholder="Nhập email của bạn" />
                <small class="error-message" id="emailError"></small>
            </div>

            <div class="form-group">
                <label for="Password">Mật khẩu</label>
                <input type="password" id="Password" name="Password" required placeholder="Tạo mật khẩu" />
                <small class="error-message" id="passwordError"></small>
            </div>

            <div class="form-group">
                <label for="ConfirmPassword">Xác nhận mật khẩu</label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" required placeholder="Nhập lại mật khẩu" />
                <small class="error-message" id="confirmPasswordError"></small>
            </div>

            <button type="submit" class="btn-register">Đăng ký</button>

            <div class="register-links">
                <p>Đã có tài khoản? <a asp-action="Login" asp-controller="Account">Đăng nhập ngay</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/Account/register.js"></script>
}